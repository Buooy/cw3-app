{
  "name": "smart-wallet-app-template",
  "version": "0.1.0",
  "private": true,
  "author": "buooy",
  "packageManager": "pnpm@9.9.0",
  "scripts": {
    "dev": "next dev",
    "build": "next build",
    "build:turbo": "pnpm dlx turbo@latest run build",
    "postbuild": "next-sitemap --config next-sitemap.config.js",
    "start": "next start",
    "lint": "next lint",
    "lint:fix": "eslint src --fix && pnpm format",
    "type-check": "tsc --noEmit",
    "check:turbo": "pnpm dlx turbo@latest lint type-check",
    "test:e2e": "playwright test",
    "format": "prettier --write src",
    "up-interactive": "pnpm up -i",
    "up-latest": "pnpm up-interactive -L",
    "release": "cross-env HUSKY=0 standard-version",
    "push-release": "git push --follow-tags origin main",
    "prepare": "husky"
  },
  "dependencies": {
    "@chakra-ui/next-js": "^2.2.0",
    "@chakra-ui/react": "^2.8.2",
    "@emotion/react": "^11.11.3",
    "@emotion/styled": "^11.11.0",
    "@tanstack/react-query": "^5.24.1",
    "@thirdweb-dev/chains": "^0.1.73",
    "@thirdweb-dev/react": "^4.4.9",
    "@thirdweb-dev/sdk": "^4.0.36",
    "ethers": "5",
    "framer-motion": "^11.0.3",
    "next": "^14.1.0",
    "next-pwa": "^5.6.0",
    "qs": "^6.11.2",
    "query-string": "^9.0.0",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-icons": "^5.0.1",
    "react-query": "^3.39.3",
    "viem": "2.x",
    "wagmi": "^2.5.7"
  },
  "devDependencies": {
    "@commitlint/cli": "^18.6.0",
    "@commitlint/config-conventional": "^18.6.0",
    "@commitlint/cz-commitlint": "^18.6.0",
    "@playwright/test": "^1.40.1",
    "@types/qs": "^6.9.12",
    "@types/react": "^18.2.48",
    "commitizen": "^4.3.0",
    "cross-env": "^7.0.3",
    "eslint": "^8.56.0",
    "eslint-config-next": "^14.1.0",
    "eslint-config-sznm": "^2.0.2",
    "husky": "^9.0.7",
    "lint-staged": "^15.2.0",
    "next-sitemap": "^4.2.3",
    "pino-pretty": "^10.3.1",
    "prettier": "^3.2.4",
    "standard-version": "^9.5.0",
    "typescript": "^5.3.3"
  },
  "engines": {
    "node": ">=16.x.x",
    "pnpm": ">=8"
  }
}
